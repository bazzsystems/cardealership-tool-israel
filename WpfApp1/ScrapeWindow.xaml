<Window x:Class="WpfApp1.ScrapeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bazz GO Systems - מערכת רכבים" Height="378" Width="840">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="10">
            <DataGrid Name="dataGrid" />
        </StackPanel>

        <Border Grid.Column="1" Background="#EEE" Margin="10">
            <Border Padding="10">
                <StackPanel VerticalAlignment="Stretch" Width="150">
                    <Button Content="החל משיכת רכבים" Margin="0 0 0 10" Click="Button_Click" />
                    <Button Content="Button 2" Margin="0 0 0 10" />
                    <Button Content="Button 3" Margin="0 0 0 10" />
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</Window>
