<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bazz GO Systems - התחבר למערכת" Height="350" Width="400">
    <StackPanel>
        <Label Content="שם משתמש" />
        <TextBox Name="UsernameTextBox" />
        <Label Content="סיסמה" />
        <PasswordBox Name="PasswordBox" />
        <Label Content="קוד להרשמה בלבד" />
        <PasswordBox Name="PinCodeBox" />
        <Button Content="התחבר למערכת" Click="LoginButton_Click" Style="{StaticResource CustomButtonStyle}" />
        <Button Content="הירשם למערכת" Click="SignUpButton_Click" Style="{StaticResource CustomButtonStyle}" />
        <Button Content="פנאל מנהל" Click="OpenAdminControlPanel_Click" Style="{StaticResource CustomButtonStyle}" />
    </StackPanel>
</Window>
