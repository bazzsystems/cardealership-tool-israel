<Window x:Class="WpfApp1.AdminControlPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Control Panel" Height="400" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="10">
            <DataGrid Name="dataGrid" AutoGenerateColumns="False" SelectionMode="Single" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Username" Binding="{Binding Username}" />
                    <DataGridTextColumn Header="Password" Binding="{Binding Password}" />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

        <Border Grid.Column="1" Background="#EEE" Margin="10">
            <Border Padding="10">
                <StackPanel VerticalAlignment="Stretch" Width="150">
                    <Button Content="Add" Margin="0 0 0 10" Click="AddButton_Click" />
                    <Button Content="Delete" Margin="0 0 0 10" Click="DeleteButton_Click" />
                    <Button Content="Modify" Margin="0 0 0 10" Click="ModifyButton_Click" />
                    <Button Content="Logout" Margin="0 0 0 10" Click="LogoutButton_Click" />
                </StackPanel>
            </Border>
        </Border>
    </Grid>
</Window>
