<Window x:Class="WpfApp1.AdminControlPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bazz GO Systems - פנאל מנהל" Height="400" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="1" Background="#EEE" Margin="10">
            <Border Padding="10">
                <StackPanel VerticalAlignment="Stretch" Width="150">
                    <Label Content="שם משתמש" />
                    <TextBox Name="UsernameTextBox" />
                    <Label Content="סיסמה" />
                    <PasswordBox Name="PasswordBox" />
                    <Button Content="הוסף" Margin="0 0 0 10" Click="AddButton_Click" Width="149" />
                    <Button Content="מחק" Click="DeleteButton_Click" Width="149"/>
                    <Button Content="חזור" Click="GoBackButton_Click" Width="149"/>
                </StackPanel>
            </Border>
        </Border>

        <DataGrid Name="dataGrid" Grid.Column="0" Margin="10" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="שם משתמש" Binding="{Binding Username}" />
                <DataGridTextColumn Header="סיסמה" Binding="{Binding Password}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
