<Window x:Class="WpfApp1.ModifyUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bazz GO Systems - ערוך משתמש" Height="200" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Content="שם משתמש:" Grid.Row="0" />
        <TextBox Name="UsernameTextBox" Grid.Row="0" Grid.Column="1" />

        <Label Content="סיסמה:" Grid.Row="1" />
        <TextBox Name="PasswordTextBox" Grid.Row="1" Grid.Column="1" />

        <Button Content="שמור" Grid.Row="2" Grid.ColumnSpan="2" Margin="0 10 0 0" Click="SaveButton_Click" />
        <Button Content="בטל" Grid.Row="3" Grid.ColumnSpan="2" Click="CancelButton_Click" />
    </Grid>
</Window>
